{% extends 'base.html.twig' %}

{% block title %}Module index{% endblock %}

{% block body %}
    <div class="p-4">
        <h1>Listes des différents modules</h1>
        <span>Les données présentes sur les modules sont les dernières données collectées depuis l'historique de fonctionnement des modules</span>
    </div>

    {% for type, messages in app.flashes %}
        <div class="overflow-y-scroll messageContainer">
            {% for message in messages %}
                <div class="alert alert-danger">
                    <p>{{ message }}</p>
                </div>
            {% endfor %}
        </div>
    {% endfor %}

    {% if modules|length > 0 %}
        <div id="moduleContainer" class="overflow-y-scroll">
            {% for module in modules %}

                {% set lastHistory = module.operatingHistory|last %}

                <div class="card m-2">
                    <div class="card-body w-100">
                        <h3 class="card-title">{{ module.name }}</h3>
                        <p class="card-text id"> id: {{ module.id }}</p>
                        <p class="card-text"> Description: {{ module.description }}</p>
                        <p class="status">Status: {{ lastHistory.status|default("") }}</p>
                        <p class="duration">Durée d'utilisation actuelle (h): {{ lastHistory.duration|default("") }}</p>
                        <p class="dataConsumed">Données consommées (go): {{ lastHistory.consumedData|default("") }}</p>
                        <p class="sentData">Données envoyées (go): {{ lastHistory.dataSent|default("") }}</p>
                        <a href="{{ path('app_module_show', {'id': module.id}) }}" class="btn btn-primary">Voir</a>
                    </div>
                </div>

            {% else %}
                    <span>no records found</span>
            {% endfor %}
        </div>

        <div class="newModuleContainer">
            <a href="{{ path('app_module_new') }}">
                <button class="btn">Créez un module</button>
            </a>
        </div>



    {% else %}
    <h1>Aucun module n'a été trouvé vueillez en crééé</h1>
    <div class="container">
        <div class="btn_container">
            <button class="btn" id="automatic_btn">Créer 10 module (automatique)</button>
        </div>
    </div>
    {% endif %}

{% endblock %}
