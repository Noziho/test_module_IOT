{% extends 'base.html.twig' %}

{% block title %}Module index{% endblock %}

{% block body %}
    <div class="p-4">
        <h1>Listes des différents modules</h1>
        <span>Les données présentes sur les modules sont les dernières données collectées depuis l'historique de fonctionnement des modules</span>
    </div>

    {% for type, messages in app.flashes %}
        <div class="overflow-y-scroll messageContainer">
            {% for message in messages %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
    {% endfor %}

    {% if modules|length > 0 %}
        <div id="moduleContainer">
            {% for module in modules %}

                {% set lastHistory = module.operatingHistory|last %}

                <div class="card m-2">
                    <div class="card-body w-100">
                        <h3 class="card-title">{{ module.name }}</h3>
                        <p class="card-text"> id: {{ module.id }}</p>
                        <p class="card-text"> Description: {{ module.description }}</p>
                        <p>Status: {{ lastHistory.status }}</p>
                        <p>Durée d'utilisation actuelle (h): {{ lastHistory.duration }}</p>
                        <p>Données consommées (go): {{ lastHistory.consumedData }}</p>
                        <p>Données envoyées (go): {{ lastHistory.dataSent }}</p>
                        <a href="{{ path('app_module_show', {'id': module.id}) }}" class="btn btn-primary">Voir</a>
                        <a href="{{ path('app_module_edit', {'id': module.id}) }}" class="btn btn-primary">Modifier</a>
                    </div>
                    <div>
                        <canvas id="myChart"></canvas>
                    </div>

                    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

                    <script>
                        const ctx = document.getElementById('myChart');

                        new Chart(ctx, {
                            type: 'bar',
                            data: {
                                labels: ['Dernières 30 sec'],
                                datasets: [{
                                    label: 'Données utilisé en go',
                                    data: [{{ lastHistory.consumedData }}],
                                    borderWidth: 1
                                }]
                            },
                            options: {
                                scales: {
                                    y: {
                                        beginAtZero: true
                                    }
                                }
                            }
                        });
                    </script>
                </div>

            {% else %}
                    <span>no records found</span>
            {% endfor %}
        </div>

        <a href="{{ path('app_module_new') }}">
            <button class="btn">Créez un module</button>
        </a>


    {% else %}
    <h1>Aucun module n'a été trouvé vueillez en crééé</h1>
    <div class="container">
        <div class="btn_container">
            <button class="btn" id="automatic_btn">Créer 10 module (automatique)</button>
        </div>
    </div>
    {% endif %}

{% endblock %}
